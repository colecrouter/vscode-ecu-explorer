{
	"name": "@ecu-explorer/root",
	"displayName": "ECU Explorer",
	"description": "ECU ROM tuning file viewer with XML definition support",
	"publisher": "colecrouter",
	"version": "0.0.0",
	"type": "module",
	"license": "GPL-3.0",
	"author": "Cole Router",
	"keywords": [
		"ecu",
		"rom",
		"tuning",
		"vscode",
		"extension",
		"calibration",
		"obd2",
		"can",
		"bootloader"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/colecrouter/vscode-ecu-explorer"
	},
	"homepage": "https://github.com/colecrouter/vscode-ecu-explorer#readme",
	"workspaces": [
		"packages/core",
		"packages/device",
		"packages/device/transports/*",
		"packages/device/protocols/*",
		"packages/definitions/*",
		"packages/mcp",
		"packages/ui",
		"apps/vscode"
	],
	"scripts": {
		"build": "npm run build --workspaces",
		"check": "npm run check --workspaces && tsc --noEmit -p tsconfig.test.node.json && tsc --noEmit -p tsconfig.test.vscode.json && tsc --noEmit -p tsconfig.test.browser.json",
		"lint": "biome check",
		"format": "biome format --write && biome check --write --linter-enabled false && prettier --write . -l",
		"test": "vitest run",
		"test:watch": "vitest watch -w packages/core -w packages/ui -w packages/definitions/ecuflash -w apps/vscode",
		"test:ui": "vitest run -w packages/ui",
		"test:coverage": "vitest run --coverage"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.4.4",
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/kit": "^2.49.1",
		"@sveltejs/package": "^2.5.7",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@tsconfig/svelte": "^5.0.6",
		"@types/plotly.js-dist-min": "^2.3.4",
		"@types/vscode": "^1.107.0",
		"@types/vscode-webview": "^1.57.5",
		"@typescript-eslint/types": "^8.49.0",
		"@vitest/browser-playwright": "^4.0.18",
		"@vitest/coverage-v8": "^4.0.18",
		"expr-eval": "^2.0.2",
		"fast-xml-parser": "^5.3.3",
		"happy-dom": "^20.6.1",
		"plotly.js-dist-min": "^3.3.0",
		"prettier": "^3.7.4",
		"prettier-plugin-svelte": "^3.4.0",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"typescript": "~5.9.3",
		"vite": "npm:rolldown-vite@7.2.6",
		"vitest": "^4.0.15",
		"vitest-browser-svelte": "^2.0.1"
	},
	"overrides": {
		"vite": "npm:rolldown-vite@7.2.6"
	}
}
